<% @cart.cart_items.each do |item|%>
  <% product = item.product %>
  <div id="<%= "cart-#{product.id}" %>">
    <div class="space-y-6 mb-8">
      <div class="flex items-center justify-center gap-4">
        <div>
          <h3 class="text-lg font-semibold text-gray-700"><%= product.name %></h3>
          <h3 class="text-lg font-semibold text-green-700"><%= number_to_currency(product.price, :unit => "Rp ", :separator => ".", :delimiter => ",", :precision => 0) %></h3>
        </div>
        <div class="flex flex-1 items-center justify-end gap-2">
          <%= form_with(url: cart_add_path) do |f| %>
            <div class="flex space-x-2">
              <%= f.hidden_field :id, value: product.id%>
              <%= f.number_field :quantity, value: item.quantity, min: 0, class: "h-8 w-12 rounded border-gray-200 bg-gray-50 p-0 text-center text-xs text-gray-600" %>
              <%= f.submit "Update", class: "text-gray-700 hover:text-green-600" %>
            </div>
          <% end %>
          <%= button_to cart_remove_path(id: item.id),  class: "hover:text-red-500 cursor-pointer" do %>
            <div class="hover:text-red-500 cursor-pointer">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="m20.25 7.5-.625 10.632a2.25 2.25 0 0 1-2.247 2.118H6.622a2.25 2.25 0 0 1-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z" />
              </svg>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
