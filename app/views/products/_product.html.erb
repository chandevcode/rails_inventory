<div id="<%= dom_id product %>" class="group relative block overflow-hidden border border-gray-100 bg-white">
  <div class="relative border-t border-b border-gray-100 p-6 col-span-1 sm:col-span-1">
    <h3 class="mt-4 text-lg font-medium text-gray-900"><%= product.name %></h3>
    <p class="mt-1.5 text-sm text-gray-700">Rp. <%= product.price %></p>
    <%= form_with(url: cart_add_path, class: "mt-4")  do |f| %>
      <%= f.hidden_field :id, value: product.id %>
      <%= f.number_field :quantity, value: 1, min: 0 %>
      <%= f.submit "Add", class: "block w-full rounded bg-yellow-400 p-4 text-sm font-medium transition hover:scale-105" %>
    <% end %>
  </div>
</div>
