<div class="w-full ">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="grid grid-cols-1  gap-4 lg:grid-cols-3 lg:gap-8">
    <div class="h-32 rounded-lg  lg:col-span-2">
      <div id="products" class="mx-auto grid rounded-lg max-w-6xl  grid-cols-12 gap-6 px-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4" >
        <%= render @products %>
      </div>
    </div>
    <div class="h-32 rounded-lg">
      <%= render partial: "cart/cart" if @render_cart %>
    </div>
  </div>
</div>
