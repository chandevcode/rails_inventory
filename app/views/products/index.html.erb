<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex bg-gray-100 p-4">
    <div class="flex-3 ">
      <div id="products" class="mx-auto grid rounded-lg max-w-6xl  grid-cols-12 gap-6 px-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4" >
        <%= render @products %>
      </div>
    </div>
    <div class="flex-1 bg-white rounded-lg">
      <%= render partial: "cart/cart" if @render_cart %>
    </div>
  </div>
</div>
